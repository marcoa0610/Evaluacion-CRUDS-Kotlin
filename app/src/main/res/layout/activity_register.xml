<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#292929"
    tools:context=".activity_register">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="28dp"
        android:fontFamily="@font/poppins"
        android:text="Registrate!"
        android:textColor="#FFFEFE"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/txtUserRegister"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtUserRegister"
        android:layout_width="267dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/textbox"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:hint="Usuario"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/txtPasswordRegister"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:id="@+id/txtPasswordRegister"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="13dp"
        android:background="@drawable/textbox"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:hint="ContraseÃ±a"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/txtEmailRegister"
        app:layout_constraintEnd_toEndOf="@+id/txtEmailRegister"
        app:layout_constraintStart_toStartOf="@+id/txtEmailRegister"
        app:layout_constraintTop_toBottomOf="@+id/txtUserRegister" />

    <EditText
        android:id="@+id/txtEmailRegister"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="330dp"
        android:background="@drawable/textbox"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:hint="Correo electronico"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/btnRegisterr"
        app:layout_constraintEnd_toEndOf="@+id/txtUserRegister"
        app:layout_constraintStart_toStartOf="@+id/txtUserRegister"
        app:layout_constraintTop_toBottomOf="@+id/txtPasswordRegister" />

    <Button
        android:id="@+id/btnRegisterr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="57dp"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="@font/poppins"
        android:text="Registrarse"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEmailRegister" />

    <Button
        android:id="@+id/btnAtras"
        android:layout_width="55dp"
        android:layout_height="52dp"
        android:background="@drawable/atras"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="667dp" />

</androidx.constraintlayout.widget.ConstraintLayout>